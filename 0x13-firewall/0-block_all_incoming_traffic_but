# checking status of ufw
sudo ufw status
# installing ufw
sudo apt install ufw
# allowing outgoing traffic but denying incoming traffic
sudo ufw default deny incoming
sudo ufw default allow outgoing
# configuring ufw to allow certain ports
sudo ufw allow ssh
sudo ufw allow http
sudo ufw allow https
# enabling ufw 
sudo systemctl enable ufw
sudo ufw enable
# logging data for monitoring
sudo ufw logging on
